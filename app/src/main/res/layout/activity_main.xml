<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnComenzarServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Comenzar Servicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDetenerServicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Detener Servicio"
        app:layout_constraintEnd_toEndOf="@+id/btnComenzarServicio"
        app:layout_constraintStart_toStartOf="@+id/btnComenzarServicio"
        app:layout_constraintTop_toBottomOf="@+id/btnComenzarServicio" />

    <Button
        android:id="@+id/btnForm1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Ir a Formulario 1"
        app:layout_constraintEnd_toEndOf="@+id/btnDetenerServicio"
        app:layout_constraintStart_toStartOf="@+id/btnDetenerServicio"
        app:layout_constraintTop_toBottomOf="@+id/btnDetenerServicio" />

    <Button
        android:id="@+id/btnForm2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Ir a Formulario 2"
        app:layout_constraintEnd_toEndOf="@+id/btnForm1"
        app:layout_constraintStart_toStartOf="@+id/btnForm1"
        app:layout_constraintTop_toBottomOf="@+id/btnForm1" />

</androidx.constraintlayout.widget.ConstraintLayout>